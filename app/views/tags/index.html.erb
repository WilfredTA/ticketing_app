<h1>Tags</h1>

<table>
  <thead>
    <tr>
      <td>Name</td>
      <td>Tickets</td>
    </tr>
  </thead>
  <tbody>
    <% @tags.each do |t| %>
      <tr>
        <td><%=t.name%></td>
        <td><%=t.tickets.size%></td>
        <% if logged_in? %>
          <td><%= link_to "Edit", edit_tag_path(t)%> or
              <%= link_to "Destroy", tag_path(t), method: :delete %></td>
        <% end %>
      </tr>

    <%end%>
  </tbody>
</table>


<% if logged_in? %>
  <%= link_to "Create New Tag", new_tag_path() %>
<% end %>
