<h1><%=@project.name%></h1>
<p>
  <%= @project.description %>
</p>
<% if logged_in? %>
  <%= link_to "Edit Project", edit_project_path(@project) %>
<% end %>

<h1>Tickets</h1>
  <table>
    <thead>
      <tr>
        <td>Name</td>
        <td>Tags</td>
        <td>Status</td>
        <td>Creator</td>
        <td>Assginee</td>
      </tr>
    </thead>
    <tbody>
      <% @project.tickets.each do |t| %>
        <%= render 'tickets/ticket', ticket: t %>
      <% end %>
    </tbody>
  </table>
